{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles:article_id": {
    "description": "serves a specific article by article_id property",
    "queries": [],
    "exampleResponse": {
      "article_id": 1,
      "title": "example title",
      "topic": "example topic",
      "author": "John Smith",
      "body": "I find this project challenging",
      "created_at": "2020-07-09T20:11:00.000Z",
      "votes": 50,
      "article_img_url": "www.exampleurl.com"
    }
  },
  "GET /api/articles:article_id/comments": {
    "description": "serves an array of all comments for an article",
    "queries": [],
    "exampleResponse": {
      "comment_id": 99,
      "body": "hello there",
      "article_id": 5,
      "author": "Jack Jones",
      "created_at": "2020-01-05T20:11:00.000Z",
      "votes": 577
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates the votes for an article",
    "queries": [],
    "exampleResponse": {
      "article_id": 6,
      "title": "example title",
      "topic": "cars",
      "author": "John Jones",
      "body": "2020-01-05T20:11:00.000Z",
      "created_at": 577,
      "votes": 10,
      "article_img_url": "www.exampleurl.com"
    }
  },

  "DELETE /api/comments/:comment_id": {
    "description": "deletes a specific comment by comment_id",
    "queries": [],
    "exampleResponse": {}
  },
  "GET /api/users": {
    "description": "serves an array of all users",
    "queries": [],
    "exampleResponse": {
      "users": [
        {
          "username": "MrMan123",
